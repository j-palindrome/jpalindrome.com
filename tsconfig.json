{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@animation/*": ["libs/util/reactive/*"],
      "@util/*": ["libs/util/src/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/types/app/work/[role]/page.tsx",
    ".next/types/app/work/layout.tsx",
    ".next/types/app/work/page.tsx",
    ".next/types/app/layout.tsx",
    ".next/types/app/page.tsx",
    ".tailwindrc"
  ],
  "exclude": ["node_modules"]
}
